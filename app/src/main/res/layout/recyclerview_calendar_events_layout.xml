<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="#814">

        <TextView
            android:id="@+id/textview_recyclerview_calendar_events_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/textview_recyclerview_calendar_events_type"
            android:layout_below="@+id/textview_recyclerview_calendar_events_title"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/textview_recyclerview_calendar_events_date_type"
            android:layout_below="@+id/textview_recyclerview_calendar_events_title"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="5dp"
            android:text="Confirmed Date"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>